			logger.info("初始化账户额度：" + result);
			
			CustInfo custInfo = customerService.query4CustInfoByPhoneNum(cust.getPhoneNum());
			CustAmount amount = customerService.query4CustAmountByPhoneNum(cust.getPhoneNum());
			CustMsg customerMsg = new CustMsg(cust, custInfo, amount);
		
			request.getSession().setAttribute("custInfo", custInfo);
			request.getSession().setAttribute("customerMsg", customerMsg);
			return new Result(true, customerMsg);
		}catch(Exception e){
