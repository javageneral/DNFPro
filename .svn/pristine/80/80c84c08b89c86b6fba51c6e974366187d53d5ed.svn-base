	@RequestMapping("/info.id_card_up_photo")
	@ResponseBody
	public String idCardUpPhoto(@RequestParam("id_card_up_photo") MultipartFile file, HttpServletRequest request, HttpServletResponse response){
		Customer cust = (Customer) request.getSession().getAttribute("customer");
//		校验图片格式
		String oraginalFileName = file.getOriginalFilename();
		String filename = request.getParameter("photo_name");
		String reg = RegExputils.checkFileEnd(oraginalFileName);
		if(reg.equals("00")){
			return new Result(false, "图片格式不符合要求").toString();
		}else{
			filename = filename + reg;
		}
		String root = request.getSession().getServletContext().getRealPath("/");
		String path = root + "/resources/customer/" + cust.getPhoneNum() + "/idCard/";
		logger.info("filename: "  + filename + " path:" + path);
		if(FileUpload.uploadIdCardFile(file, path, filename)){
			Object url = "resources/customer/" + cust.getPhoneNum() + "/idCard/" + filename;
			request.getSession().setAttribute("id_card_up_photo", url);
			return new Result<Object>(true, url).toString();
		}else{
			return new Result(false, "上传失败").toString();
		}
	}
	
	
